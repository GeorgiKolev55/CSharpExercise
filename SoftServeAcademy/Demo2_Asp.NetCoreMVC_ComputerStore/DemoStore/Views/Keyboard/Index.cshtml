
@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <title>Index</title>
</head>
<body>
    <h3>Keyboards</h3>
    <table cellpadding="2" cellspacing="2" border="1" align="center">

        <tr>

            <th>Name</th>
            <th>Photo</th>
            <th>Price</th>
            <th>Description</th>
            <th>Buy</th>
        </tr>
        @foreach (var item in Model)
        {


            <tr>

                <td>@item.Name</td>
                <td><img width="160" src="~/images/@item.Photo" /></td>
                <td>@item.Price</td>
                <td>@item.Description</td>
                <td align="center">
                    <a asp-controller="cart" asp-action="buy" asp-route-id="@item.Id">Buy Now</a>
                </td>
            </tr>

        }

    </table>


</body>

</html>

